<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:layout_marginTop="?attr/actionBarSize"
                                             android:paddingStart="@dimen/medium_padding"
                                             android:paddingEnd="@dimen/medium_padding"
                                             android:orientation="vertical"
                                             android:focusableInTouchMode="true"
                                             tools:context=".playersheet.inventory.AddItemActivity"
                                             tools:showIn="@layout/activity_add_item">
    <!--region GenericItem-->
    <EditText android:id="@+id/item_name"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:inputType="textCapSentences"
              android:textSize="@dimen/medium_text_size"
              android:hint="@string/item_name"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintBottom_toTopOf="@+id/item_type"
              app:layout_constraintLeft_toLeftOf="parent" />

    <Spinner android:id="@+id/item_type"
             android:layout_width="0dp"
             android:layout_height="40dp"
             app:layout_constraintTop_toBottomOf="@id/item_name"
             app:layout_constraintRight_toRightOf="parent"
             app:layout_constraintBottom_toTopOf="@+id/quantity"
             app:layout_constraintLeft_toLeftOf="parent" />

    <TextView android:id="@+id/quantity_label"
              android:layout_width="0dp"
              android:layout_height="40dp"
              android:gravity="center_vertical|end"
              android:labelFor="@+id/quantity"
              android:hint="@string/quantity"
              app:layout_constraintTop_toBottomOf="@id/item_type"
              app:layout_constraintRight_toLeftOf="@+id/quantity"
              app:layout_constraintBottom_toTopOf="@+id/armor_layout"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintHorizontal_weight="3" />
    <EditText android:id="@+id/quantity"
              android:layout_width="0dp"
              android:layout_height="40dp"
              android:paddingEnd="@dimen/medium_padding"
              android:gravity="center"
              android:hint="@string/zero"
              app:layout_constraintTop_toBottomOf="@id/item_type"
              app:layout_constraintRight_toLeftOf="@+id/encumbrance_label"
              app:layout_constraintBottom_toTopOf="@+id/armor_layout"
              app:layout_constraintLeft_toRightOf="@id/quantity_label"
              app:layout_constraintHorizontal_weight="2" />

    <ImageView android:id="@+id/encumbrance_label"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:src="@drawable/ic_weight_black_36"
               android:contentDescription="@string/encumbrance"
               app:layout_constraintTop_toBottomOf="@id/item_type"
               app:layout_constraintRight_toLeftOf="@+id/encumbrance"
               app:layout_constraintBottom_toTopOf="@+id/armor_layout"
               app:layout_constraintLeft_toRightOf="@id/quantity"
               app:layout_constraintHorizontal_weight="1" />
    <EditText android:id="@+id/encumbrance"
              android:layout_width="0dp"
              android:layout_height="40dp"
              android:gravity="center"
              android:hint="@string/zero"
              app:layout_constraintTop_toBottomOf="@id/item_type"
              app:layout_constraintRight_toLeftOf="@+id/quality"
              app:layout_constraintBottom_toTopOf="@+id/armor_layout"
              app:layout_constraintLeft_toRightOf="@id/encumbrance_label"
              app:layout_constraintHorizontal_weight="2" />

    <Spinner android:id="@+id/quality"
             android:layout_width="0dp"
             android:layout_height="40dp"
             app:layout_constraintTop_toBottomOf="@id/item_type"
             app:layout_constraintRight_toRightOf="parent"
             app:layout_constraintBottom_toTopOf="@+id/armor_layout"
             app:layout_constraintLeft_toRightOf="@id/encumbrance"
             app:layout_constraintHorizontal_weight="5" />
    <!--endregion-->

    <LinearLayout android:id="@+id/armor_layout"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  app:layout_constraintTop_toBottomOf="@id/encumbrance"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintBottom_toTopOf="@+id/expandable_layout"
                  app:layout_constraintLeft_toLeftOf="parent">

        <ImageView android:id="@+id/defense_label"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:src="@drawable/ic_shield_black_36"
                   android:contentDescription="@string/defense"
                   android:layout_marginEnd="@dimen/medium_padding" />
        <com.nicolas.whfrp3companion.shared.components.NumberPickerMinMax android:id="@+id/defense"
                                                                          android:layout_width="wrap_content"
                                                                          android:layout_height="wrap_content" />
        <ImageView android:id="@+id/soak_label"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:src="@drawable/ic_armor_black_36"
                   android:contentDescription="@string/soak"
                   android:layout_marginStart="@dimen/giant_padding"
                   android:layout_marginEnd="@dimen/medium_padding" />
        <com.nicolas.whfrp3companion.shared.components.NumberPickerMinMax android:id="@+id/soak"
                                                                          android:layout_width="wrap_content"
                                                                          android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout android:id="@+id/expandable_layout"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center"
                  app:layout_constraintTop_toBottomOf="@id/armor_layout"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintBottom_toTopOf="@+id/weapon_layout"
                  app:layout_constraintLeft_toLeftOf="parent">
        <ImageView android:id="@+id/uses_label"
                   android:layout_width="wrap_content"
                   android:layout_height="50dp"
                   android:src="@drawable/ic_potion_black_24dp"
                   android:contentDescription="@string/uses" />
        <com.nicolas.whfrp3companion.shared.components.NumberPickerMinMax android:id="@+id/uses"
                                                                          android:layout_width="wrap_content"
                                                                          android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout android:id="@+id/weapon_layout"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  app:layout_constraintTop_toBottomOf="@+id/expandable_layout"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintBottom_toTopOf="@+id/description"
                  app:layout_constraintLeft_toLeftOf="parent" />

    <EditText android:id="@+id/description"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:maxHeight="300dp"
              android:gravity="top"
              android:scrollbars="vertical"
              android:inputType="textMultiLine"
              android:selectAllOnFocus="true"
              android:maxLines="30"
              android:hint="@string/description"
              app:layout_constraintTop_toBottomOf="@+id/weapon_layout"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>