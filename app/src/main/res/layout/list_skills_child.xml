<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingStart="?android:attr/expandableListPreferredChildPaddingLeft">

    <ImageView android:id="@+id/specialized"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_gravity="center_vertical"
               android:src="@drawable/ic_check_black"
               android:contentDescription="@string/page_specializations" />

    <TextView android:id="@+id/specialization_name"
              android:layout_width="fill_parent"
              android:layout_height="100dp"
              android:layout_gravity="center_vertical"
              android:gravity="center_vertical"
              android:padding="@dimen/big_padding"
              android:textSize="@dimen/medium_text_size"
              android:hint="@string/page_specializations" />
</LinearLayout>