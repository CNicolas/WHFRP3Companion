<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             app:layout_constraintTop_toTopOf="parent"
                                             app:layout_constraintRight_toRightOf="parent"
                                             app:layout_constraintBottom_toBottomOf="parent"
                                             app:layout_constraintLeft_toLeftOf="parent">

    <Spinner
        android:id="@+id/weaponTypeSpinner"
             android:layout_width="0dp"
             android:layout_height="50dp"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/weaponRangeSpinner"
             app:layout_constraintLeft_toLeftOf="parent" />

    <Spinner
        android:id="@+id/weaponRangeSpinner"
             android:layout_width="0dp"
             android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/weaponTypeSpinner"
             app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/damageNumberPicker"
             app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView android:id="@+id/damage_label"
               android:layout_width="40dp"
               android:layout_height="50dp"
               android:src="@drawable/ic_damage_black_16"
        android:labelFor="@+id/damageNumberPicker"
               android:contentDescription="@string/damage"
        app:layout_constraintTop_toBottomOf="@id/weaponRangeSpinner"
        app:layout_constraintRight_toLeftOf="@+id/damageNumberPicker"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintLeft_toLeftOf="parent" />

    <com.nicolas.whfrp3companion.shared.components.NumberPickerMinMax
        android:id="@+id/damageNumberPicker"
                                                                      android:layout_width="wrap_content"
                                                                      android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/weaponRangeSpinner"
                                                                      app:layout_constraintRight_toLeftOf="@+id/critical_level_label"
                                                                      app:layout_constraintBottom_toBottomOf="parent"
                                                                      app:layout_constraintLeft_toRightOf="@id/damage_label" />

    <ImageView android:id="@+id/critical_level_label"
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:layout_marginStart="@dimen/big_padding"
               android:src="@drawable/ic_boon_black_36"
               android:contentDescription="@string/critical_level"
        app:layout_constraintTop_toBottomOf="@id/weaponRangeSpinner"
        app:layout_constraintRight_toLeftOf="@+id/criticalLevelNumberPicker"
               app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/damageNumberPicker" />

    <com.nicolas.whfrp3companion.shared.components.NumberPickerMinMax
        android:id="@+id/criticalLevelNumberPicker"
                                                                      android:layout_width="wrap_content"
                                                                      android:layout_height="wrap_content"
                                                                      android:layout_marginEnd="@dimen/giant_padding"
        app:layout_constraintTop_toBottomOf="@id/weaponRangeSpinner"
                                                                      app:layout_constraintRight_toRightOf="parent"
                                                                      app:layout_constraintBottom_toBottomOf="parent"
                                                                      app:layout_constraintLeft_toRightOf="@id/critical_level_label" />

</android.support.constraint.ConstraintLayout>