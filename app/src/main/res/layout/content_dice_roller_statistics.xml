<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                              xmlns:app="http://schemas.android.com/apk/res-auto"
                                              xmlns:tools="http://schemas.android.com/tools"
                                              android:id="@+id/swipe_refresh_layout"
                                              android:layout_width="match_parent"
                                              android:layout_height="match_parent"
                                              android:layout_marginTop="?attr/actionBarSize"
                                              tools:showIn="@layout/activity_dice_roller_statistics"
                                              tools:context=".activities.DiceRollerStatisticsActivity">
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:orientation="vertical">

        <TextView android:id="@+id/total_roll_count"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:hint="@string/total_rolls_count_hint"
                  android:textSize="@dimen/giant_text_size"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintBottom_toTopOf="@+id/successful_rolls" />

        <TextView android:id="@+id/successful_rolls"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/medium_padding"
                  android:gravity="center"
                  android:hint="@string/successful_rolls_hint"
                  android:textSize="@dimen/big_text_size"
                  app:layout_constraintTop_toBottomOf="@+id/total_roll_count"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintBottom_toTopOf="@+id/average_success" />

        <TextView android:id="@+id/average_success"
                  android:layout_width="0dp"
                  android:layout_height="56dp"
                  android:layout_marginStart="@dimen/giant_padding"
                  android:layout_marginEnd="@dimen/giant_padding"
                  android:drawableStart="@drawable/ic_success_black_36"
                  android:drawablePadding="@dimen/giant_padding"
                  android:gravity="center_vertical"
                  android:hint="@string/statistics_average_result_hint"
                  android:textSize="@dimen/medium_text_size"
                  app:layout_constraintTop_toBottomOf="@+id/successful_rolls"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintBottom_toTopOf="@+id/average_boon" />

        <TextView android:id="@+id/average_boon"
                  android:layout_width="0dp"
                  android:layout_height="56dp"
                  android:layout_marginStart="@dimen/giant_padding"
                  android:layout_marginEnd="@dimen/giant_padding"
                  android:drawableStart="@drawable/ic_boon_black_36"
                  android:drawablePadding="@dimen/giant_padding"
                  android:gravity="center_vertical"
                  android:hint="@string/statistics_average_result_hint"
                  android:textSize="@dimen/medium_text_size"
                  app:layout_constraintTop_toBottomOf="@+id/average_success"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintBottom_toTopOf="@+id/average_sigmar" />

        <TextView android:id="@+id/average_sigmar"
                  android:layout_width="0dp"
                  android:layout_height="56dp"
                  android:layout_marginStart="@dimen/giant_padding"
                  android:layout_marginEnd="@dimen/giant_padding"
                  android:drawableStart="@drawable/ic_sigmar_black_36"
                  android:drawablePadding="@dimen/giant_padding"
                  android:gravity="center_vertical"
                  android:hint="@string/statistics_average_result_hint"
                  android:textSize="@dimen/medium_text_size"
                  app:layout_constraintTop_toBottomOf="@+id/average_boon"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintBottom_toTopOf="@+id/average_failure" />

        <TextView android:id="@+id/average_failure"
                  android:layout_width="0dp"
                  android:layout_height="57dp"
                  android:layout_marginStart="@dimen/giant_padding"
                  android:layout_marginEnd="@dimen/giant_padding"
                  android:drawableStart="@drawable/ic_failure_black_36"
                  android:drawablePadding="@dimen/giant_padding"
                  android:gravity="center_vertical"
                  android:hint="@string/statistics_average_result_hint"
                  android:textSize="@dimen/medium_text_size"
                  app:layout_constraintTop_toBottomOf="@+id/average_sigmar"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintBottom_toTopOf="@+id/average_bane" />

        <TextView android:id="@+id/average_bane"
                  android:layout_width="0dp"
                  android:layout_height="56dp"
                  android:layout_marginStart="@dimen/giant_padding"
                  android:layout_marginEnd="@dimen/giant_padding"
                  android:drawableStart="@drawable/ic_bane_black_36"
                  android:drawablePadding="@dimen/giant_padding"
                  android:gravity="center_vertical"
                  android:hint="@string/statistics_average_result_hint"
                  android:textSize="@dimen/medium_text_size"
                  app:layout_constraintTop_toBottomOf="@+id/average_failure"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintBottom_toTopOf="@+id/average_chaos" />

        <TextView android:id="@+id/average_chaos"
                  android:layout_width="0dp"
                  android:layout_height="57dp"
                  android:layout_marginStart="@dimen/giant_padding"
                  android:layout_marginEnd="@dimen/giant_padding"
                  android:drawableStart="@drawable/ic_chaos_black_36"
                  android:drawablePadding="@dimen/giant_padding"
                  android:gravity="center_vertical"
                  android:hint="@string/statistics_average_result_hint"
                  android:textSize="@dimen/medium_text_size"
                  app:layout_constraintTop_toBottomOf="@+id/average_bane"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toRightOf="parent" />

        <TextView android:id="@+id/average_delay"
                  android:layout_width="0dp"
                  android:layout_height="56dp"
                  android:layout_marginStart="@dimen/giant_padding"
                  android:layout_marginEnd="@dimen/giant_padding"
                  android:drawableStart="@drawable/ic_delay_black_36"
                  android:drawablePadding="@dimen/giant_padding"
                  android:gravity="center_vertical"
                  android:hint="@string/statistics_average_result_hint"
                  android:textSize="@dimen/medium_text_size"
                  app:layout_constraintTop_toBottomOf="@+id/average_chaos"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintBottom_toTopOf="@+id/average_exhaustion" />

        <TextView android:id="@+id/average_exhaustion"
                  android:layout_width="0dp"
                  android:layout_height="56dp"
                  android:layout_marginStart="@dimen/giant_padding"
                  android:layout_marginEnd="@dimen/giant_padding"
                  android:drawableStart="@drawable/ic_exhaustion_black_36"
                  android:drawablePadding="@dimen/giant_padding"
                  android:gravity="center_vertical"
                  android:hint="@string/statistics_average_result_hint"
                  android:textSize="@dimen/medium_text_size"
                  app:layout_constraintTop_toBottomOf="@+id/average_delay"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintBottom_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.SwipeRefreshLayout>