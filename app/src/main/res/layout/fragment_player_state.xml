<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/medium_padding"
    android:paddingEnd="@dimen/medium_padding"
    android:paddingTop="@dimen/medium_padding"
    tools:context=".playersheet.PlayerSheetActivity"
    tools:ignore="RtlSymmetry">
    <!--region Wounds-->
    <TextView
        android:id="@+id/woundsLabel"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center|end"
        android:paddingEnd="@dimen/medium_padding"
        android:hint="@string/wounds"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/removeWoundButton"
        app:layout_constraintBottom_toTopOf="@+id/exhaustionLabel"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/removeWoundButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/hyphen"
        app:layout_constraintTop_toTopOf="@+id/woundsLabel"
        app:layout_constraintRight_toLeftOf="@+id/woundsTextView"
        app:layout_constraintBottom_toBottomOf="@+id/woundsLabel"
        app:layout_constraintLeft_toRightOf="@+id/woundsLabel" />

    <TextView
        android:id="@+id/woundsTextView"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="@dimen/big_text_size"
        android:textStyle="bold"
        android:hint="@string/zero"
        app:layout_constraintTop_toTopOf="@+id/removeWoundButton"
        app:layout_constraintRight_toLeftOf="@+id/addWoundButton"
        app:layout_constraintBottom_toBottomOf="@+id/removeWoundButton"
        app:layout_constraintLeft_toRightOf="@+id/removeWoundButton" />

    <Button
        android:id="@+id/addWoundButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="@dimen/giant_padding_2"
        android:text="@string/plus"
        app:layout_constraintTop_toTopOf="@+id/woundsTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/woundsTextView"
        app:layout_constraintLeft_toRightOf="@+id/woundsTextView" />
    <!--endregion-->

    <!--region Exhaustion-->
    <TextView
        android:id="@+id/exhaustionLabel"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:gravity="center|bottom"
        android:hint="@string/exhaustion"
        app:layout_constraintTop_toBottomOf="@+id/woundsTextView"
        app:layout_constraintRight_toLeftOf="@+id/stressLabel"
        app:layout_constraintBottom_toTopOf="@+id/exhaustionTextView"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/removeExhaustionButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/hyphen"
        app:layout_constraintTop_toTopOf="@+id/exhaustionTextView"
        app:layout_constraintRight_toLeftOf="@+id/exhaustionTextView"
        app:layout_constraintBottom_toBottomOf="@+id/exhaustionTextView"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/exhaustionTextView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="@dimen/medium_text_size"
        android:hint="@string/zero"
        app:layout_constraintTop_toTopOf="@+id/addExhaustionButton"
        app:layout_constraintRight_toLeftOf="@+id/addExhaustionButton"
        app:layout_constraintBottom_toBottomOf="@+id/addExhaustionButton"
        app:layout_constraintLeft_toRightOf="@+id/removeExhaustionButton" />

    <Button
        android:id="@+id/addExhaustionButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/plus"
        app:layout_constraintTop_toTopOf="@+id/removeStressButton"
        app:layout_constraintRight_toLeftOf="@+id/removeStressButton"
        app:layout_constraintBottom_toBottomOf="@+id/removeStressButton"
        app:layout_constraintLeft_toRightOf="@+id/exhaustionTextView" />
    <!--endregion-->

    <!--region Stress-->
    <TextView
        android:id="@+id/stressLabel"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:gravity="center|bottom"
        android:hint="@string/stress"
        app:layout_constraintTop_toBottomOf="@+id/woundsTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/stressTextView"
        app:layout_constraintLeft_toRightOf="@+id/exhaustionLabel" />

    <Button
        android:id="@+id/removeStressButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/hyphen"
        app:layout_constraintTop_toTopOf="@+id/stressTextView"
        app:layout_constraintRight_toLeftOf="@+id/stressTextView"
        app:layout_constraintBottom_toBottomOf="@+id/stressTextView"
        app:layout_constraintLeft_toRightOf="@+id/addExhaustionButton" />

    <TextView
        android:id="@+id/stressTextView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="@dimen/medium_text_size"
        android:hint="@string/zero"
        app:layout_constraintTop_toTopOf="@+id/addStressButton"
        app:layout_constraintRight_toLeftOf="@+id/addStressButton"
        app:layout_constraintBottom_toBottomOf="@+id/addStressButton"
        app:layout_constraintLeft_toRightOf="@+id/removeStressButton" />

    <Button
        android:id="@+id/addStressButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/plus"
        app:layout_constraintTop_toBottomOf="@+id/stressLabel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/stanceBarLayout"
        app:layout_constraintLeft_toRightOf="@+id/stressTextView" />
    <!--endregion-->

    <!--region Stance-->
    <LinearLayout
        android:id="@+id/stanceBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/exhaustionTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/defenseTextView"
        app:layout_constraintLeft_toLeftOf="parent">

        <include layout="@layout/content_stance_bar" />
    </LinearLayout>
    <!--endregion-->

    <!--region Defense/Soak-->
    <TextView
        android:id="@+id/defenseTextView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/giant_padding_2"
        android:gravity="center"
        android:drawableStart="@drawable/ic_shield_black_36"
        android:textSize="@dimen/big_text_size"
        android:textStyle="bold"
        android:hint="@string/zero"
        app:layout_constraintTop_toBottomOf="@+id/stanceBarLayout"
        app:layout_constraintRight_toLeftOf="@+id/soakTextView"
        app:layout_constraintBottom_toTopOf="@+id/weaponsListView"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/soakTextView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="@dimen/giant_padding_2"
        android:gravity="center"
        android:drawableStart="@drawable/ic_armor_black_36"
        android:textSize="@dimen/big_text_size"
        android:textStyle="bold"
        android:hint="@string/zero"
        app:layout_constraintTop_toTopOf="@+id/defenseTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/defenseTextView"
        app:layout_constraintLeft_toRightOf="@+id/defenseTextView" />
    <!--endregion-->

    <ListView
        android:id="@+id/weaponsListView"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_marginTop="@dimen/medium_padding"
        android:layout_marginBottom="@dimen/medium_padding"
        app:layout_constraintTop_toBottomOf="@+id/defenseTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:listitem="@layout/list_element_weapon" />

</android.support.constraint.ConstraintLayout>