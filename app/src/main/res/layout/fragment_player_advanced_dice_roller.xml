<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:orientation="vertical"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:fitsSystemWindows="true">

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 android:paddingTop="@dimen/medium_padding">
        <ImageView android:id="@+id/characteristic_dice"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/dice_characteristic"
                   android:contentDescription="@string/characteristic"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintRight_toLeftOf="@+id/conservative_dice"
                   app:layout_constraintBottom_toTopOf="@+id/characteristicDicePicker"
                   app:layout_constraintLeft_toLeftOf="parent" />
        <com.nicolas.whfrp3companion.shared.components.NumberPickerMinMax android:id="@+id/characteristicDicePicker"
                                                                          android:layout_width="wrap_content"
                                                                          android:layout_height="@dimen/dice_picker_big_height"
                                                                          app:layout_constraintTop_toBottomOf="@+id/characteristic_dice"
                                                                          app:layout_constraintRight_toLeftOf="@+id/conservativeDicePicker"
                                                                          app:layout_constraintBottom_toTopOf="@+id/challenge_dice"
                                                                          app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView android:id="@+id/conservative_dice"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/dice_conservative"
                   android:contentDescription="@string/conservative"
                   app:layout_constraintTop_toTopOf="@+id/characteristic_dice"
                   app:layout_constraintRight_toLeftOf="@+id/reckless_dice"
                   app:layout_constraintBottom_toBottomOf="@+id/characteristic_dice"
                   app:layout_constraintLeft_toRightOf="@+id/characteristic_dice" />
        <com.nicolas.whfrp3companion.shared.components.NumberPickerMinMax android:id="@+id/conservativeDicePicker"
                                                                          android:layout_width="wrap_content"
                                                                          android:layout_height="@dimen/dice_picker_big_height"
                                                                          app:layout_constraintTop_toTopOf="@+id/characteristicDicePicker"
                                                                          app:layout_constraintRight_toLeftOf="@+id/recklessDicePicker"
                                                                          app:layout_constraintBottom_toBottomOf="@+id/characteristicDicePicker"
                                                                          app:layout_constraintLeft_toRightOf="@+id/characteristicDicePicker" />

        <ImageView android:id="@+id/reckless_dice"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/dice_reckless"
                   android:contentDescription="@string/reckless"
                   app:layout_constraintTop_toTopOf="@+id/conservative_dice"
                   app:layout_constraintRight_toLeftOf="@+id/expertise_dice"
                   app:layout_constraintBottom_toBottomOf="@+id/conservative_dice"
                   app:layout_constraintLeft_toRightOf="@+id/conservative_dice" />
        <com.nicolas.whfrp3companion.shared.components.NumberPickerMinMax android:id="@+id/recklessDicePicker"
                                                                          android:layout_width="wrap_content"
                                                                          android:layout_height="@dimen/dice_picker_big_height"
                                                                          app:layout_constraintTop_toTopOf="@+id/conservativeDicePicker"
                                                                          app:layout_constraintRight_toLeftOf="@+id/expertiseDicePicker"
                                                                          app:layout_constraintBottom_toBottomOf="@+id/conservativeDicePicker"
                                                                          app:layout_constraintLeft_toRightOf="@+id/conservativeDicePicker" />

        <ImageView android:id="@+id/expertise_dice"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/dice_expertise"
                   android:contentDescription="@string/expertise"
                   app:layout_constraintTop_toTopOf="@+id/reckless_dice"
                   app:layout_constraintRight_toLeftOf="@+id/fortune_dice"
                   app:layout_constraintBottom_toBottomOf="@+id/reckless_dice"
                   app:layout_constraintLeft_toRightOf="@+id/reckless_dice" />
        <com.nicolas.whfrp3companion.shared.components.NumberPickerMinMax android:id="@+id/expertiseDicePicker"
                                                                          android:layout_width="wrap_content"
                                                                          android:layout_height="@dimen/dice_picker_big_height"
                                                                          app:layout_constraintTop_toTopOf="@+id/recklessDicePicker"
                                                                          app:layout_constraintRight_toLeftOf="@+id/fortuneDicePicker"
                                                                          app:layout_constraintBottom_toBottomOf="@+id/recklessDicePicker"
                                                                          app:layout_constraintLeft_toRightOf="@+id/recklessDicePicker" />

        <ImageView android:id="@+id/fortune_dice"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/dice_fortune"
                   android:contentDescription="@string/fortune"
                   app:layout_constraintTop_toTopOf="@+id/expertise_dice"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintBottom_toBottomOf="@+id/expertise_dice"
                   app:layout_constraintLeft_toRightOf="@+id/expertise_dice" />
        <com.nicolas.whfrp3companion.shared.components.NumberPickerMinMax android:id="@+id/fortuneDicePicker"
                                                                          android:layout_width="wrap_content"
                                                                          android:layout_height="@dimen/dice_picker_big_height"
                                                                          app:layout_constraintTop_toTopOf="@+id/expertiseDicePicker"
                                                                          app:layout_constraintRight_toRightOf="parent"
                                                                          app:layout_constraintBottom_toBottomOf="@+id/expertiseDicePicker"
                                                                          app:layout_constraintLeft_toRightOf="@+id/expertiseDicePicker" />

        <ImageView android:id="@+id/challenge_dice"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/dice_challenge"
                   android:contentDescription="@string/challenge"
                   app:layout_constraintTop_toBottomOf="@+id/characteristicDicePicker"
                   app:layout_constraintRight_toLeftOf="@+id/misfortune_dice"
                   app:layout_constraintBottom_toTopOf="@+id/challengeDicePicker"
                   app:layout_constraintLeft_toLeftOf="parent" />
        <com.nicolas.whfrp3companion.shared.components.NumberPickerMinMax android:id="@+id/challengeDicePicker"
                                                                          android:layout_width="wrap_content"
                                                                          android:layout_height="@dimen/dice_picker_big_height"
                                                                          app:layout_constraintTop_toTopOf="@+id/misfortuneDicePicker"
                                                                          app:layout_constraintRight_toLeftOf="@+id/misfortuneDicePicker"
                                                                          app:layout_constraintBottom_toBottomOf="@+id/misfortuneDicePicker"
                                                                          app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView android:id="@+id/misfortune_dice"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/dice_misfortune"
                   android:contentDescription="@string/misfortune"
                   app:layout_constraintTop_toTopOf="@+id/challenge_dice"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintBottom_toBottomOf="@+id/challenge_dice"
                   app:layout_constraintLeft_toRightOf="@+id/challenge_dice" />
        <com.nicolas.whfrp3companion.shared.components.NumberPickerMinMax android:id="@+id/misfortuneDicePicker"
                                                                          android:layout_width="wrap_content"
                                                                          android:layout_height="@dimen/dice_picker_big_height"
                                                                          app:layout_constraintTop_toBottomOf="@+id/misfortune_dice"
                                                                          app:layout_constraintRight_toRightOf="parent"
                                                                          app:layout_constraintBottom_toTopOf="@+id/stance_bar_layout"
                                                                          app:layout_constraintLeft_toRightOf="@+id/challengeDicePicker" />


        <include android:id="@+id/stance_bar_layout"
                 layout="@layout/content_stance_bar"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 app:layout_constraintTop_toBottomOf="@+id/misfortuneDicePicker"
                 app:layout_constraintLeft_toLeftOf="parent"
                 app:layout_constraintRight_toRightOf="parent"
                 app:layout_constraintBottom_toTopOf="@+id/select_skill_button" />

        <Button android:id="@+id/select_skill_button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/medium_padding"
                android:text="@string/page_skills"
                app:layout_constraintTop_toBottomOf="@+id/stance_bar_layout"
                app:layout_constraintRight_toLeftOf="@+id/select_action_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

        <Button android:id="@+id/select_action_button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="@string/page_actions"
                app:layout_constraintTop_toTopOf="@+id/select_skill_button"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/select_skill_button"
                app:layout_constraintLeft_toRightOf="@+id/select_skill_button" />
    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.FloatingActionButton android:id="@+id/fab_roll_hand"
                                                        android:layout_width="72dp"
                                                        android:layout_height="72dp"
                                                        android:layout_gravity="bottom|end"
                                                        android:layout_margin="@dimen/fab_margin"
                                                        app:srcCompat="@drawable/ic_roll_dices_white" />
</android.support.design.widget.CoordinatorLayout>