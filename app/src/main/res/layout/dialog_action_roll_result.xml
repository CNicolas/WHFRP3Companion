<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/list_std_margin"
    android:paddingTop="@dimen/list_std_margin"
    android:paddingEnd="@dimen/list_std_margin">

    <include
        android:id="@+id/roll_results_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        layout="@layout/content_roll_result"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <include
        android:id="@+id/weapon_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        layout="@layout/list_element_weapon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roll_results_layout"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/damageTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/big_text_size"
        android:hint="@string/zero"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weapon_layout"
        app:layout_constraintRight_toRightOf="parent" />

    <ListView
        android:id="@+id/action_effects"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:listitem="@layout/list_element_action_effect"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/damageTextView"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>