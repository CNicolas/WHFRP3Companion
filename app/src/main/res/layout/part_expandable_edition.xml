<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:gravity="center_horizontal">

    <ImageView android:id="@+id/uses_label"
               android:layout_width="wrap_content"
               android:layout_height="50dp"
               android:layout_marginEnd="@dimen/big_padding"
               android:layout_gravity="center_vertical"
               android:src="@drawable/ic_potion_black_24dp"
               android:contentDescription="@string/uses" />

    <com.nicolas.whfrp3companion.shared.components.NumberPickerMinMax
        android:id="@+id/usesNumberPicker"
                                                                      android:layout_width="wrap_content"
                                                                      android:layout_height="wrap_content"
                                                                      app:minValue="@integer/zero"
                                                                      app:maxValue="@integer/max_uses" />
</LinearLayout>