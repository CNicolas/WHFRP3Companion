<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CharacteristicEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">numberSigned</item>
        <item name="android:textColor">@color/characteristic</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:hint">@string/zero</item>
    </style>

    <style name="CharacteristicFortuneEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">numberSigned</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:hint">@string/zero</item>
    </style>
</resources>