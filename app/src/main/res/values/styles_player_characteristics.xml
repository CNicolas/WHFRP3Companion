<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CharacteristicLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">@dimen/giant_padding</item>
        <item name="android:paddingEnd">@dimen/medium_padding</item>
        <item name="android:gravity">center|end</item>
        <item name="android:layout_gravity">center|end</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="CharacteristicEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">numberSigned</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:hint">@string/zero</item>
    </style>

    <style name="CharacteristicFortuneEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/giant_padding_2</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">numberSigned</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:hint">@string/zero</item>
    </style>
</resources>